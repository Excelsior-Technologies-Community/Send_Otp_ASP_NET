@{
    ViewData["Title"] = "Login / Register with OTP";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h5>Login / Register</h5>
                </div>

                <div class="card-body">

                    <!-- MOBILE NUMBER -->
                    <div class="mb-3">
                        <label class="form-label">Mobile Number</label>
                        <input type="text" id="mobile" class="form-control"
                               placeholder="Enter mobile number"
                               maxlength="10" />
                    </div>

                    <!-- SEND OTP -->
                    <button class="btn btn-primary w-100" id="btnSendOtp">
                        Send OTP
                    </button>

                    <!-- OTP SECTION -->
                    <div id="otpSection" style="display:none;" class="mt-3">
                        <div class="mb-3">
                            <label class="form-label">Enter OTP</label>
                            <input type="text" id="otp" class="form-control"
                                   placeholder="6-digit OTP"
                                   maxlength="6" />
                        </div>

                        <button class="btn btn-success w-100" id="btnVerifyOtp">
                            Verify OTP
                        </button>

                        <div class="text-center mt-2">
                            <a href="javascript:void(0);" id="resendOtp" class="text-primary">
                                Resend OTP
                            </a>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <span id="msg" class="fw-bold"></span>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script>
    // SEND OTP
    $("#btnSendOtp").click(function () {
        var mobile = $("#mobile").val();

        if (mobile.length != 10) {
            alert("Enter valid 10-digit mobile number");
            return;
        }

        $.post("/SendOtp/SendOtp", { mobile: mobile }, function (res) {
            if (res.success) {
                $("#otpSection").show();
                $("#msg").text(res.message).css("color", "green");

                if (res.otp) {
                    alert("DEV OTP: " + res.otp);
                    console.log("DEV OTP:", res.otp);
                }
            } else {
                $("#msg").text(res.message).css("color", "red");
            }
        });

    });

 
    $("#btnVerifyOtp").click(function () {
        var mobile = $("#mobile").val();
        var otp = $("#otp").val();

        if (otp.length != 6) {
            alert("Enter valid OTP");
            return;
        }

        $.post("/SendOtp/VerifyOtp", { mobile: mobile, otp: otp }, function (res) {
            if (res.success) {
                $("#msg").text("Login successful").css("color", "green");
                
                window.location.href = "/Home/Index";
            } else {
                $("#msg").text(res.message).css("color", "red");
            }
        });
    });

    // RESEND OTP
    $("#resendOtp").click(function () {
        $("#btnSendOtp").click();
    });
</script>
